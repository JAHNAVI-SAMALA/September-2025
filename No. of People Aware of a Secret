from collections import deque
class Solution:
    def peopleAwareOfSecret(self, n: int, delay: int, forget: int) -> int:
        MOD = 10**9 + 7
        dp = deque([1])
        window = 0
        for t in range(2,n+ 1):
            if t - delay - 1 >= 0:
                window = (window +dp[-delay]) % MOD
            if t - forget -1 >= 0:
                window = (window - dp[-forget]) % MOD
            dp.append(window)
            if len(dp) > forget:
                dp.popleft()
        return sum(dp) % MOD
